<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPrefernces">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ridepallogo" />

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_width="341dp"
        android:layout_marginBottom="20dp"
        android:layout_height="468dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="0.372">

        <TextView
            android:id="@+id/preftitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#551A8B"
            android:text="@string/preference"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/agerangetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agerange"
            android:textColor="#551A8B"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/min"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:hint="@string/min"
                android:textColorHint="#551A8B"
                android:textColor="#551A8B"
                android:inputType="number" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/max"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:hint="@string/max"
                android:textColorHint="#551A8B"
                android:textColor="#551A8B"
                android:inputType="number" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/genderpreftitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genderpref"
            android:textColor="#551A8B"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/genderprefset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/malebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="#551A8B"
                android:text="@string/male" />

            <RadioButton
                android:id="@+id/femalebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#551A8B"
                android:textSize="10sp"
                android:text="@string/female" />

            <RadioButton
                android:id="@+id/eitherbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="#551A8B"
                android:text="@string/either" />
        </RadioGroup>


        <Button
            android:id="@+id/nextbutton"
            android:text="@string/next"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#551A8B"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:layout_width="132dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/skipButton"
            android:layout_width="132dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#551A8B"
            android:textColor="#FFF"
            android:text="Skip" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>