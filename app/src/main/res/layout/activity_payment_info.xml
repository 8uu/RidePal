<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentInfo">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ridepallogo" />

    <LinearLayout

        android:id="@+id/mainsection"
        android:layout_width="match_parent"
        android:layout_height="468dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageView"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/paymenttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/paymentinfo"
            android:textColor="#551A8B"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ccname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ccname"
            android:inputType="textPersonName"
            android:textColor="#551A8B"
            android:textColorHint="#551A8B"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ccnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ccnum"
            android:inputType="number"
            android:textColor="#551A8B"
            android:textColorHint="#551A8B"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ccexpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ccexp"
            android:inputType="date"
            android:textColor="#551A8B"
            android:textColorHint="#551A8B"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ccccv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ccccv"
            android:inputType="number"
            android:textColor="#551A8B"
            android:textColorHint="#551A8B"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/cczip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cczip"
            android:inputType="number"
            android:textColor="#551A8B"
            android:textColorHint="#551A8B"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="150px" />

        <Button
            android:id="@+id/finishbutton"
            android:layout_width="132dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#551A8B"
            android:text="@string/finish"
            android:textColor="#FFF" />
    </LinearLayout>
</RelativeLayout>